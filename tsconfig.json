{
    "compilerOptions": {
        "moduleResolution": "Node",
        "module": "commonjs",
        "target": "es2018",
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "build",
        "allowJs": true,
        "lib": [
          "es2018",
          "dom"
        ]
    },
    "include": [
      "src/**/*.js",
      "src/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
